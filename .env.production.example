# ===================================================================
# PRODUCTION WEB DEPLOYMENT ENVIRONMENT
# ===================================================================
# This .env configuration is for production web deployment
# at https://so2al.free.nf
#
# KEY: NATIVE_APP=false for web deployment
# ===================================================================

APP_NAME='سؤال محيرني'
APP_ENV=production
APP_KEY=base64:cxxGpzG0YUbVqYSNMcPbBuLt4z0R8Rr7gBG9SB8LDFA=
APP_DEBUG=false
APP_URL=https://so2al.free.nf

# ===================================================================
# CRITICAL: Set NATIVE_APP=false for web deployment
# This makes all API calls use relative URLs (same-origin)
# No CORS issues because frontend and backend are same domain
# ===================================================================
NATIVE_APP=false

# ===================================================================
# REMOTE_APP_URL: Leave empty for web deployment
# ===================================================================
# REMOTE_APP_URL=

# ===================================================================
# NATIVE_APP_ALLOWED_ORIGINS: Only use if you have mobile app
# calling this production API from capacitor://localhost or similar
# For web-only deployment, leave empty or comment out
# ===================================================================
# NATIVE_APP_ALLOWED_ORIGINS=capacitor://localhost,tauri://localhost,https://app.yourapp.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===================================================================
# Database: Production database config
# ===================================================================
DB_CONNECTION=sqlite
DB_DATABASE=/path/to/production/database.sqlite

# Or use MySQL if available:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=your_db_name
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_db_password

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=file

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@so2al.free.nf"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
