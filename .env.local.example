# ===================================================================
# LOCAL WEB DEVELOPMENT ENVIRONMENT
# ===================================================================
# This .env configuration is for local web development using Laravel Herd/Valet
# with the domain https://soual-mehairny.test
#
# KEY CHANGE: NATIVE_APP=false to use same-origin API calls
# ===================================================================

APP_NAME='سؤال محيرني'
APP_ENV=local
APP_KEY=base64:cxxGpzG0YUbVqYSNMcPbBuLt4z0R8Rr7gBG9SB8LDFA=
APP_DEBUG=true
APP_URL=https://soual-mehairny.test

# ===================================================================
# CRITICAL: Set NATIVE_APP=false for local web development
# This makes all API calls use relative URLs (same-origin)
# Example: apiGet('/api/native/questions') → https://soual-mehairny.test/api/native/questions
# ===================================================================
NATIVE_APP=false

# ===================================================================
# REMOTE_APP_URL: Leave empty for local development
# Only needed for NativePHP mobile/desktop builds
# ===================================================================
# REMOTE_APP_URL=

# ===================================================================
# NATIVE_APP_ALLOWED_ORIGINS: Only needed if deploying mobile app
# For local dev, this is IGNORED because NATIVE_APP=false
# ===================================================================
# NATIVE_APP_ALLOWED_ORIGINS=capacitor://localhost,tauri://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===================================================================
# Database: Use local SQLite for development
# ===================================================================
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=file

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ===================================================================
# NativePHP Config (for mobile builds only, not used in web dev)
# ===================================================================
NATIVEPHP_APP_ID=com.minahawarei.so2al_mehairny
NATIVEPHP_APP_VERSION=1.0.0
NATIVEPHP_APP_VERSION_CODE=2

# Android Keystore Configuration
ANDROID_KEYSTORE_FILE=credentials/soual-mehairny.jks
ANDROID_KEYSTORE_PASSWORD=968420
ANDROID_KEY_ALIAS=soual-mehairny
ANDROID_KEY_PASSWORD=968420
